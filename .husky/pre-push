#!/usr/bin/env bash
# Auto-bump patch version before every push
# This ensures the plugin version increments with each push to the remote.

set -euo pipefail

REPO_ROOT="$(cd "$(dirname "$0")/.." && pwd)"
MARKETPLACE_JSON="$REPO_ROOT/.claude-plugin/marketplace.json"

# Read current version
CURRENT=$(python3 -c "import json; print(json.load(open('$MARKETPLACE_JSON'))['plugins'][0]['version'])")

# Bump patch
IFS='.' read -r MAJOR MINOR PATCH <<< "$CURRENT"
PATCH=$((PATCH + 1))
NEW_VERSION="$MAJOR.$MINOR.$PATCH"

echo "Auto-bumping plugin version: $CURRENT → $NEW_VERSION"

# Update marketplace.json
python3 -c "
import json
with open('$MARKETPLACE_JSON', 'r') as f:
    data = json.load(f)
data['plugins'][0]['version'] = '$NEW_VERSION'
with open('$MARKETPLACE_JSON', 'w') as f:
    json.dump(data, f, indent=2)
    f.write('\n')
"

# Stage and commit the version bump
git add "$MARKETPLACE_JSON"
git commit -m "chore: bump version to $NEW_VERSION" --no-verify

echo "✓ Version bumped to $NEW_VERSION"
